<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hai.mediapicker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false"/>
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">


        <activity
            android:name=".activity.MediaPickerActivity"
            android:label="@string/label_picker_activity"
            android:screenOrientation="portrait"
            android:theme="@style/WxTheme">


        </activity>

        <activity
            android:name=".activity.AlbumActivity"
            android:label="@string/label_picker_activity"
            android:screenOrientation="portrait"
            android:theme="@style/WxTheme"/>

        <activity
            android:name=".activity.PreviewActivity"
            android:label="@string/label_picker_activity"
            android:screenOrientation="portrait"
            android:theme="@style/WxTheme" />

        <activity
            android:name=".activity.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CaptureTheme" />
        <activity
            android:name=".activity.CaptureActivity2"
            android:screenOrientation="portrait"
            android:theme="@style/CaptureTheme" />
        <activity
            android:name=".activity.VideoPlayer"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:theme="@style/CaptureTheme" />
    </application>

</manifest>